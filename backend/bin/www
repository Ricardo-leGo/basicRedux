#!/usr/bin/env node

const http = require('http');
const app = require('../app');

app.use((req, res, next) => {
  res.status(404).json({ msg: 'No encontrado' });
});

app.use((err, req, res, next) => {
  console.error('ERROR', req.method, req.path, err);
  if (!res.headersSent) {
    res.status(500).send({ msg: 'Revisar consola' });
  }
});

const server = http.createServer(app);

server.on('error', (error) => {
  if (error.syscall !== 'listen') {
    throw error;
  }
  switch (error.code) {
    case 'EACCES':
      console.error(`El puerto ${process.env.PORT} requiere privilegios de administrador`);
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(`El puerto  ${process.env.PORT} ya estÃ¡ siendo usado por otra app`);
      process.exit(1);
      break;
    default:
      throw error;
  }
});

server.listen(process.env.PORT, () => {
  console.log(`Escuchando en http://localhost:${process.env.PORT}`);
});
